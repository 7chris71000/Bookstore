<% if @book.errors.full_messages.present? %>
	<ul>
		<% @book.errors.full_messages.each do |error| %>
			<li>
				<%= error %>
			</li>
		<% end %>
	</ul>
<% end %>     



<%= form_for(@book) do |f| %>

	<%= f.label(:title) %><br>
	<%= f.text_field(:title) %> <br>
	<%= f.label(:user_id) %> <br>
	<%= f.collection_select(:user_id, User.all, :id, :name, :prompt => true) %> <br>
	<%= f.label(:published_year) %> <br>
	<%= f.text_field(:published_year) %> <br>
	<%= f.label(:image_url) %> <br>
	<%= f.text_field(:image_url) %> <br>

	<%= f.submit %>

<% end %>