<h1>Books</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Author</th>
			<th>Published Year</th>
			<th>Image</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do | book | %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.author %></td>
			<td><%= book.published_year %></td>
			<td>

				<%= book.image_url.present? ? image_tag(book.image_url) : image_tag("no_image_found.jpg") %>

			</td>
		</tr>
		<% end %>
	</tbody>

</table>