<body>
	<div class="container">
		<div id="portfolio">        	

			<%= link_to "Add New Book", "#", class: "btn-dark-add-book" %>

			<div class="portfolio-container">
				<ul>

					<% @books.each do | book | %>

					<li class="one-fourth">
						<p>
							<!-- <a href="#"> -->

								<div class="book-cover-container">
									<%= book.image_url.present? ? image_tag(book.image_url, height: '238', width: '160') : image_tag("no_image_found.jpg", height: '238', width: '160') %>
									<%= link_to "View Details", "/books/#{book.id}", class: "view-details" %>
								</div>

								<!-- </a> -->
							</p>
							<h4 class="book-author">
								<%= link_to book.title, "#" %>
							</h4>
							<p class="book-author">
								<%= book.author %>
							</p>
						</li>
						<% end %>

					</ul>
					<!--END ul-->
				</div>


				<!--END portfolio-wrap-->
			</div>
			<br clear="both">
			<br clear="both">

		</div>
	</body>