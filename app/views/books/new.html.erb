<body>
	<div class="container">
		<div class="one-half new-book-container">
			<h2>New Book</h2>

			<%= form_for(@book) do |f| %>

				<%= f.label(:title) %><br>
				<%= f.text_field(:title) %> <br>
				<%= f.label(:author) %> <br>
				<%= f.text_field(:author) %> <br>
				<%= f.label(:published_year) %> <br>
				<%= f.text_field(:published_year) %> <br>
				<%= f.label(:image_url) %> <br>
				<%= f.text_field(:image_url) %> <br>

				<%= f.submit %>

			<% end %>

		</div>

		<br clear="both">
		<br clear="both">

	</div>
</body>