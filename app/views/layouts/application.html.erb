<!DOCTYPE html>
<html>
<head>
  <title>My Second Rails App | <%= @title || "Welcome" %> </title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= favicon_link_tag 'Dog.ico' %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

  <div class="nav">

    <%= link_to("Home", "/") %>

    <%= link_to("About", "/about") %>
    
    <%= link_to("Contact", "/contact") %>

    <%= link_to("Books", "/books") %>

    <%= link_to("Toys", "/toys") %>

    <%= link_to("Blog", "/blog_posts") %>

    <% if user_signed_in? %>
      <div class="header-float-right">
        <%= link_to current_user.email, "/users/#{current_user.id}", :class=>"gray-name" %>
        <%= link_to "Sign Out", destroy_user_session_path, data: {method: :delete} %>
      </div>
    <% else %>
      <%= link_to "Sign In", new_user_session_path, :class=>"header-float-right" %>
    <% end %>

  </div>
  <%= render "layouts/header" %>
  <%= yield %>
</body>
</html>
