<!DOCTYPE html>
<html>
  <head>
    <title>My Second Rails App | <%= @title || "Welcome" %> </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= favicon_link_tag 'Dog.ico' %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="nav">

      <%= link_to("Home", "/") %>

      <%= link_to("About", "/about") %>
    
      <%= link_to("Contact", "/contact") %>
     
      <%= link_to("Books", "/books") %>
      
      <%= link_to("Users", "/users") %>

      <%= link_to("Toys", "/toys") %>

      <%= link_to("Blog", "/blog_posts") %>
      
    </div>
    <%= render "layouts/header" %>
    <%= yield %>
  </body>
</html>
