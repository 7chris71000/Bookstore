
<div class="container">

	<table>
		<tr>
			<td>Name</td>
			<td><%= @user.name %></td>
		</tr>
		<tr>
			<td>Age</td>
			<td><%= @user.age %></td>
		</tr>	
		<tr>
			<td>Gender</td>
			<td><%= @user.gender %></td>
		</tr>	
		<tr>
			<td>Email</td>
			<td><%= @user.email %></td>
		</tr>	
	</table>

	<% if(current_user.id == @user.id) %>
		<%= link_to "Edit", edit_user_path(@user.id) %>
	<% end %>

</div>
